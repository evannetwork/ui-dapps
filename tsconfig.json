{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "@dapps/*": [
        "./dapps/*"
      ],
      "@core/*": [
        "./core/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "files": ["./scripts/dapp/vue-shim.d.ts"],
}

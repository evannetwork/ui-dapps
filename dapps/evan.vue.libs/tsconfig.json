{
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./built/",
    "paths": {
      "bcc": [
        "../../../node_modules/@evan.network/api-blockchain-core/bundles/bcc/bcc"
      ],
      "dapp-browser": [
        "../../../node_modules/@evan.network/ui-dapp-browser/runtime/build/main"
      ],
      "smart-contracts": [
        "../../../node_modules/@evan.network/smart-contracts-core/contracts/compiled.js"
      ]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "../../../node_modules/@evan.network"
  ],
  "include": [
    "./src/**/*"
  ]
}